<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ana_icerik"
        android:orientation="vertical">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/colorDark"
            android:padding="15dp"
            xmlns:android="http://schemas.android.com/apk/res/android" >

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:id="@+id/rcYoutube"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="SON HABERLER"
                android:textColor="@color/colorwhite"
                tools:textStyle="bold" />

            <GridView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:horizontalSpacing="3dp"
                android:verticalSpacing="3dp"
                android:layout_weight="1"
                android:numColumns="2"
                android:id="@+id/gdHaber">
            </GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="ETKİNLİKLER"
                android:textColor="@color/colorwhite"
                tools:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:id="@+id/rcEtkinlik"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:textAlignment="center"
                />
    </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|start">

        <!-- menü ögelerinin olduğu view -->
        <ListView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_alignParentTop="true"
            android:id="@+id/navList" />

        <!-- burası da sosyal medya ikonlarının olduğu yer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook"
                android:background="@color/trans"
                android:layout_marginRight="3dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twitter"
                android:background="@color/trans"
                android:layout_marginRight="3dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/instagram"
                android:background="@color/trans"
                android:layout_marginRight="3dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/youtube"
                android:background="@color/trans"/>

        </LinearLayout>


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>